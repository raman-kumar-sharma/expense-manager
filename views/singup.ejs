<html>

<head>
	<title>Expense Tracker</title>
	<style>
		<%- include('./style/style');
		%>
	</style>
</head>

<body>
	<%- include('./partials/header'); %>

		<h2>Singup</h2>

		<% if(typeof success !='undefined' ){ %>
			<%= success %>
				<% } %> <br><br>

		<form method="post">

			<label for="name"> Name </label><br>
			<input type="text" id="name" name="name" placeholder="Enter name...." <% if(typeof body !='undefined' && typeof body.name
			!='undefined' ){ %>value="<%= body.name %>" <% } %>>
					<% if(typeof nameError !='undefined' ){ %>
					<%= nameError %>
						<% } %>
<br><br>


			<label for="number"> Number </label><br>
			<input type="number" id="number" name="number" placeholder="Enter number...." <% if(typeof body !='undefined' && typeof body.number
						!='undefined' ){ %>value="<%= body.number %>" <% } %>>
								<% if(typeof numberError !='undefined' ){ %>
								<%= numberError %>
									<% } %>
			<br><br>


			<label for="email"> Email </label><br>
			<input type="text" id="email" name="email" placeholder="Enter email...." <% if(typeof body !='undefined' && typeof body.email
						!='undefined' ){ %>value="<%= body.email %>" <% } %>>
								<% if(typeof emailError !='undefined' ){ %>
								<%= emailError %>
									<% } %>
			<br><br>


			<label for="password"> Password </label><br>
			<input type="password" id="password" name="password" placeholder="Enter password...." <% if(typeof body !='undefined' && typeof body.password
						!='undefined' ){ %>value="<%= body.password %>" <% } %>>
								<% if(typeof passwordError !='undefined' ){ %>
								<%= passwordError %>
									<% } %>
			<br><br>

			<button class="btn"> Submit</button>

		</form>
		<%- include('./partials/footer'); %>
</body>

</html>