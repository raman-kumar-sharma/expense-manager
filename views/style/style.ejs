ul {
list-style-type: none;
margin: 0;
padding: 0;
overflow: hidden;
background-color: #333;
}

li {
float: left;
}

li a {
display: block;
color: white;
text-align: center;
padding: 14px 16px;
text-decoration: none;
}

li a:hover {
background-color: #111;
}



h1,h2,h3,h4{
  font-family: "Roboto", sans-serif;
}





table
{

width:90%;
height:10%;
border-collapse: collapse;
}
th, td {
border:2px solid black;
text-align: center;
width: fit-content; 
/* To adjust the height as well */ 
height: fit-content;
}







/* Set a style for all buttons */
button {
  background-color: #04AA6D;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  cursor: pointer;
  width: 10%;
  opacity: 0.9;
}


input[type=text], input[type=password], input[type=number], input[type=date] {
  
  padding: 15px;
  margin: 5px 0 22px 0;
  display: inline-block;
  border: none;
  background: #f1f1f1;
  
width: fit-content; 
/* To adjust the height as well */ 
height: fit-content;

}

.myDiv {
border: 5px outset black;
background-color: lightblue;
text-align: center;

}

